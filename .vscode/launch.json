    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Clean Debug)",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": true,
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen",
            "module": "streamlit",
            "args": [
                "run",
                "${file}",
                "8080.port",
                "8501"
            ]
        }
    ]
}